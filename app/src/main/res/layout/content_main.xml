<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/ice"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.aravind.android_signin.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sign-in Form"
        android:id="@+id/s1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#da0f0f" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name:"
        android:id="@+id/s2"
        android:foregroundGravity="top|left|right"
        android:layout_marginTop="30dp"
        android:gravity="fill_horizontal|center_vertical|center|fill_vertical|center_horizontal"
        android:layout_below="@+id/s1"
        android:layout_alignParentStart="true"
        android:textColor="#f6080202" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:foregroundGravity="top|left|right"
        android:ems="10"
        android:id="@+id/s3"

        android:layout_alignBottom="@+id/s2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="DOB:"
        android:id="@+id/s4"
        android:layout_below="@+id/s3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:textColor="#0a0303" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s5"
        android:layout_alignBottom="@+id/s4"
        android:layout_alignStart="@+id/s3"
        android:layout_alignEnd="@+id/s3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="College:"
        android:id="@+id/s6"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/s4"
        android:layout_alignParentStart="true"
        android:textColor="#0b0202" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s7"
        android:layout_alignBottom="@+id/s6"
        android:layout_alignStart="@+id/s5"
        android:layout_alignEnd="@+id/s5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Department:"
        android:id="@+id/s8"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="#0a0202" />
    <Spinner
        android:id="@+id/dept"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="top|left|bottom"
        android:layout_alignTop="@+id/s8"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/s8" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/BB"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/s15"
        android:layout_toEndOf="@+id/s2" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/s15"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:textColor="#f40d0d" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Note : double click  DOB textfield to open a calender"
        android:id="@+id/s12"
        android:textColor="#7c17c0"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/BB"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/s14"
        android:layout_alignBottom="@+id/BB"
        android:layout_alignEnd="@+id/s7" />

</RelativeLayout>
